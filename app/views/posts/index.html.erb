<section class="max-w-7xl mx-auto px-6 pt-4 md:pt-6 pb-10 md:pb-14">
  <!-- Back to Home -->
  <div class="mb-3">
    <%= link_to root_path,
      class: "inline-flex items-center gap-2 text-gray hover:text-black transition-colors text-sm focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ruby/20 rounded px-1" do %>
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
      </svg>
      <span>Home</span>
    <% end %>
  </div>

  <!-- Header -->
  <div class="mb-6 md:mb-8">
    <h1 class="relative text-2xl sm:text-3xl md:text-4xl font-black leading-tight tracking-tight text-black">
      <%= @page_title %>
      <span class="absolute left-0 -bottom-2 h-1.5 w-12 bg-ruby rounded-full"></span>
    </h1>

    <!-- Search -->
    <div class="mt-5 max-w-md">
      <%= form_with url: request.path, method: :get, local: true do |form| %>
        <div class="relative">
          <!-- Search Icon -->
          <span class="pointer-events-none absolute left-3 top-1/2 -translate-y-1/2">
            <svg class="w-5 h-5 text-gray" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" d="M21 21l-4.35-4.35M10.5 18a7.5 7.5 0 1 1 0-15 7.5 7.5 0 0 1 0 15z"/>
            </svg>
          </span>

          <!-- Search Field -->
          <%= form.text_field :search,
                placeholder: "Searchâ€¦",
                value: params[:search],
                class: "w-full rounded-xl border border-gray-light bg-white pl-11 pr-10 py-3 text-sm
                        focus:outline-none focus:ring-1 focus:ring-ruby/20 focus:border-ruby transition" %>

          <!-- Clear Button -->
          <% if params[:search].present? %>
            <%= link_to request.path, class: "absolute right-3 top-1/2 -translate-y-1/2 text-gray hover:text-black" do %>
              <svg class="w-5 h-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" d="M6 6l12 12M18 6L6 18"/>
              </svg>
            <% end %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>

  <% if @post_type == "blog" %>
    <!-- Blog Layout -->
    <div class="max-w-3xl lg:max-w-4xl xl:max-w-5xl text-sm leading-tight">
      <% @posts.each do |post| %>
        <%= link_to blog_post_path(post.slug),
            class: "group block rounded-xl px-3 py-3 -mx-3
                    border-b border-gray-light/60 last:border-b-0
                    hover:bg-gray-light/30 hover:border-transparent
                    transition-colors focus-visible:outline-none
                    focus-visible:ring-2 focus-visible:ring-ruby/20" do %>

          <div class="flex items-start gap-3">
            <!-- Date -->
            <span class="text-xs text-gray mt-1 min-w-[4.5rem]">
              <%= post.created_at.strftime('%b %d, %y') %>
            </span>

            <!-- Title & Description -->
            <div class="flex-1 pr-6">
              <h3 class="text-base sm:text-lg font-semibold text-black leading-snug">
                <%= post.title %>
              </h3>
              <% if post.description.present? %>
                <p class="text-gray text-xs mt-1 leading-relaxed">
                  <%= post.description %>
                </p>
              <% end %>
            </div>

            <!-- Arrow Icon -->
            <span class="hidden sm:inline-flex self-center">
              <svg class="w-4 h-4 transition-transform group-hover:translate-x-1"
                  viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7"/>
              </svg>
            </span>
          </div>
        <% end %>
      <% end %>
    </div>
  <% else %>
    <!-- Two-Column Docs Layout -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-10 text-sm leading-tight">
      <% @posts.group_by(&:category).each do |category, category_posts| %>
        <div>
          <!-- Category -->
          <h2 class="text-base md:text-lg font-bold text-black tracking-tight mb-3 pb-1 border-b border-gray-light">
            <%= category.present? ? category : "General" %>
          </h2>

          <% if category_posts.any?(&:subcategory) %>
            <!-- With Subcategories -->
            <% category_posts.group_by(&:subcategory).each do |subcategory, posts| %>
              <% if subcategory.present? %>
                <div class="mb-4">
                  <h3 class="text-sm font-semibold text-gray-800 mb-2"><%= subcategory %></h3>
                  <div class="space-y-1">
                    <% posts.each do |post| %>
                      <% post_path =
                        case @post_type
                        when "learn_ruby"   then learn_ruby_post_path(post.slug)
                        when "software_dev" then software_dev_post_path(post.slug)
                        else "#"
                        end %>
                      <div class="flex items-start gap-2">
                        <% if post.section_number.present? %>
                          <span class="text-xs text-gray font-mono min-w-[2.75rem] mt-0.5"><%= post.section_number %></span>
                        <% else %>
                          <span class="w-1.5 h-1.5 rounded-full bg-gray mt-2"></span>
                        <% end %>
                        <%= link_to post_path,
                                    class: "flex-1 text-black hover:text-ruby transition-colors leading-snug" do %>
                          <%= post.title %>
                        <% end %>
                      </div>
                    <% end %>
                  </div>
                </div>
              <% else %>
                <!-- No Subcategory -->
                <div class="space-y-1">
                  <% posts.each do |post| %>
                    <% post_path =
                      case @post_type
                      when "learn_ruby"   then learn_ruby_post_path(post.slug)
                      when "software_dev" then software_dev_post_path(post.slug)
                      else "#"
                      end %>
                    <div class="flex items-start gap-2">
                      <span class="w-1.5 h-1.5 rounded-full bg-gray mt-2"></span>
                      <%= link_to post_path,
                                  class: "flex-1 text-black hover:text-ruby transition-colors leading-snug" do %>
                        <%= post.title %>
                      <% end %>
                    </div>
                  <% end %>
                </div>
              <% end %>
            <% end %>
          <% else %>
            <!-- Flat List -->
            <div class="space-y-1">
              <% category_posts.each do |post| %>
                <% post_path =
                  case @post_type
                  when "learn_ruby"   then learn_ruby_post_path(post.slug)
                  when "software_dev" then software_dev_post_path(post.slug)
                  else "#"
                  end %>
                <div class="flex items-start gap-2">
                  <span class="w-1.5 h-1.5 rounded-full bg-gray mt-2"></span>
                  <div class="flex-1">
                    <%= link_to post_path,
                                class: "text-black hover:text-ruby transition-colors leading-snug font-medium" do %>
                      <%= post.title %>
                    <% end %>
                    <% if post.description.present? %>
                      <div class="text-gray text-xs mt-0.5 leading-relaxed">
                        <%= truncate(post.description, length: 80) %>
                      </div>
                    <% end %>
                  </div>
                </div>
              <% end %>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  <% end %>

  <!-- Empty State -->
  <% if @posts.empty? %>
    <div class="text-sm text-gray">
      <% if params[:search].present? %>
        No results for "<%= params[:search] %>".
        <%= link_to "Clear", request.path.split('?').first, class: "text-ruby hover:underline" %>
      <% else %>
        No topics available.
      <% end %>
    </div>
  <% end %>
</section>
