<% content_for :title, "App" %>

<section class="relative">
  <div class="relative max-w-7xl mx-auto px-6 pt-10 md:pt-14 pb-16">
    <h1 class="relative pl-1 text-3xl sm:text-4xl md:text-5xl font-black leading-tight tracking-tight text-black max-w-4xl">
      Welcome to the CrackedRuby App
      <span class="absolute -bottom-3 left-1 h-1.5 w-16 bg-ruby rounded-full"></span>
    </h1>

    <p class="mt-5 pl-1 text-lg md:text-xl text-gray max-w-2xl">
      Your personalized Ruby learning environment. Sign in to track your progress,
      unlock challenges, and start coding directly in your browser.
    </p>

    <div class="mt-8 pl-1">
      <% if user_signed_in? %>
        <p class="text-lg font-semibold text-black">
          Signed in as <span class="text-ruby"><%= current_user.email %></span>
        </p>
      <% else %>
        <div data-controller="modal">
          <button
            data-action="click->modal#open"
            class="inline-block px-6 md:px-8 py-3 md:py-4 text-lg font-bold rounded-xl bg-ruby text-white shadow-lg
                  hover:shadow-xl hover:scale-[1.02] focus:outline-none focus:ring-4
                  focus:ring-ruby/40 transition cursor-pointer">
            Sign In
          </button>

          <%= render "shared/sign_in_modal" %>
        </div>
      <% end %>
    </div>
  </div>
</section>
