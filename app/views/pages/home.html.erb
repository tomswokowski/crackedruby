<% content_for :title, "Ruby Documentation & Coding Platform" %>

<!-- Hero Section -->
<section class="relative">
  <div class="relative max-w-7xl mx-auto px-6 pt-4 md:pt-6 pb-10 md:pb-14">
    <h1 class="relative pl-1 text-3xl sm:text-4xl md:text-5xl font-black leading-tight tracking-tight text-black max-w-4xl">
      Learn Ruby with AI
      <span class="absolute -bottom-3 left-1 h-1.5 w-16 bg-ruby rounded-full"></span>
    </h1>

    <p class="mt-5 pl-1 text-lg md:text-xl text-gray max-w-2xl">
      Adaptive challenges that give you instant feedback, push your skills to the next level,
      and help you grow as a Ruby developer.
    </p>

    <div class="mt-8 pl-1">
      <%= link_to about_path,
                  class: "inline-block px-6 md:px-8 py-3 md:py-4 text-lg font-bold rounded-xl bg-ruby text-white shadow-lg
                          hover:shadow-xl hover:scale-[1.02] focus:outline-none focus:ring-4
                          focus:ring-ruby/40 transition" do %>
        Get Started Now
      <% end %>
    </div>
  </div>
</section>

<!-- Main Section -->
<section class="max-w-7xl mx-auto px-6 pt-6 md:pt-8 pb-12 md:pb-16">
  <div class="grid gap-6 md:gap-8 md:grid-cols-2 items-stretch">
    <% [
      {
        title: "Ruby Language Docs",
        blurb: "Complete Ruby language coverage from syntax to metaprogramming with in-depth guides, examples, and best practices.",
        path: learn_ruby_posts_path
      },
      {
        title: "Software Dev Guides",
        blurb: "Essential computer science and engineering topics including algorithms, data structures, architecture, and scalable systems.",
        path: software_dev_posts_path
      }
    ].each do |s| %>

      <%= link_to s[:path],
        class: "group flex h-full flex-col rounded-3xl border border-gray-light/80
                bg-gradient-to-br from-white to-gray-light/30 p-6 md:p-8
                hover:-translate-y-0.5 hover:shadow-md hover:border-black/50
                transition-[transform,box-shadow,border-color]" do %>

        <div class="flex-1 min-h-[180px] md:min-h-[160px]">
          <span class="inline-block h-1.5 w-12 bg-ruby rounded-full mb-4"></span>
          <h2 class="text-2xl md:text-3xl font-extrabold tracking-tight leading-[1.1] text-black">
            <%= s[:title] %>
          </h2>
          <p class="mt-3 text-gray leading-relaxed">
            <%= s[:blurb] %>
          </p>
        </div>

        <span class="mt-6 inline-flex items-center gap-2 font-semibold text-ruby">
          Explore
          <svg class="w-4 h-4 transition-transform group-hover:translate-x-1"
               fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7"/>
          </svg>
        </span>

      <% end %>
    <% end %>
  </div>
</section>

<!-- Blog Section -->
<section class="max-w-7xl mx-auto px-6 pb-16">
  <%= render "shared/carousel", heading: "Blog Posts", collection: @latest_blog, path: "/blog" %>
</section>
