<%= link_to post_path_for_type(item),
             class: "group/card snap-start block flex-shrink-0 last:mr-8
                     w-72 sm:w-80 md:w-96" do %>
  <article
    class="h-full flex flex-col rounded-3xl border border-gray-light/80
           bg-gradient-to-br from-white to-gray-light/30 p-6
           shadow-sm hover:shadow-md hover:border-black/50
           transition-[box-shadow,border-color,transform]">

    <% if item.post_type == "blog" %>
      <p class="text-xs text-gray mb-2"><%= item.created_at.strftime("%m/%d/%Y") %></p>
    <% end %>

    <h3 class="text-lg sm:text-xl font-semibold text-black leading-snug line-clamp-2 mb-2">
      <%= item.title %>
    </h3>

    <p class="text-sm text-gray mb-4 line-clamp-4"><%= item.description %></p>

    <div class="mt-auto">
      <span class="inline-flex items-center gap-1 font-semibold text-ruby">
        Read more
        <svg
          class="w-4 h-4 transition-transform group-hover/card:translate-x-1 motion-reduce:transition-none"
          fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7"/>
        </svg>
      </span>
    </div>
  </article>
<% end %>
