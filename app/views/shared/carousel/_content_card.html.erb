<%= link_to post_path_for_type(item), 
            class: "group snap-start block flex-shrink-0 last:mr-8
                    w-72 sm:w-80 md:w-96" do %>
  <div class="h-full bg-white border border-gray-light rounded-xl p-6
              flex flex-col shadow-sm transition duration-200 ease-in-out
              hover:shadow-md hover:border-ruby hover:ring-1 hover:ring-ruby/20">
    
    <% if item.post_type == 'blog' %>
      <p class="text-sm text-gray mb-2">
        <%= item.created_at.strftime("%m/%d/%Y") %>
      </p>
    <% end %>

    <h3 class="text-xl font-semibold text-black mb-3 line-clamp-2">
      <%= item.title %>
    </h3>
    <p class="text-base text-gray mb-6 line-clamp-4">
      <%= strip_tags(marksmithed(item.body)) %>
    </p>
    <div class="mt-auto">
      <span class="inline-flex items-center gap-1 font-medium text-ruby transition
                   group-hover:text-black">
        Read more
        <svg xmlns="http://www.w3.org/2000/svg"
             class="w-4 h-4 transition-transform group-hover:translate-x-1"
             fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7"/>
        </svg>
      </span>
    </div>
  </div>
<% end %>
