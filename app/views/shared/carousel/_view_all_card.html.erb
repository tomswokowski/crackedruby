<%= link_to path,
            class: "group snap-start block flex-shrink-0 last:mr-8
                    w-72 sm:w-80 md:w-96" do %>
  <div class="h-full bg-white border border-gray-light rounded-xl p-6
              flex flex-col items-center justify-center text-center
              shadow-sm transition duration-200 ease-in-out
              hover:shadow-md hover:border-ruby hover:ring-1 hover:ring-ruby/20">
    <span class="inline-flex items-center gap-2 text-lg font-medium text-black
                 transition-colors duration-200 group-hover:text-ruby">
      <%= heading %>
      <svg xmlns="http://www.w3.org/2000/svg"
           class="w-5 h-5 transition-transform duration-200 group-hover:translate-x-1"
           fill="none" stroke="currentColor" stroke-width="2"
           viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round"
              d="M9 5l7 7-7 7"/>
      </svg>
    </span>
  </div>
<% end %>
