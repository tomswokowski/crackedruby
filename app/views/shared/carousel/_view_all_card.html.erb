<%= link_to path,
            class: "group/card snap-start block flex-shrink-0 last:mr-8
                    w-72 sm:w-80 md:w-96" do %>
  <div
    class="h-full flex flex-col items-center justify-center text-center
           rounded-3xl border border-gray-light/80
           bg-gradient-to-br from-white to-gray-light/30 p-6
           shadow-sm hover:shadow-md hover:border-black/50
           transition-[box-shadow,border-color,transform]">
    <span class="inline-flex items-center gap-2 text-base font-semibold text-ruby">
      <%= heading %>
      <svg
        class="w-5 h-5 transition-transform group-hover/card:translate-x-1 motion-reduce:transition-none"
        fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24" aria-hidden="true">
        <path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7"/>
      </svg>
    </span>
  </div>
<% end %>
