<section>
  <div class="space-y-3">
    <!-- Heading -->
    <div class="pl-1.5 md:pl-2">
      <h2 class="text-2xl md:text-3xl font-extrabold tracking-tight text-black"><%= heading %></h2>
      <span class="inline-block h-1.5 w-12 bg-ruby rounded-full"></span>
    </div>

    <div data-controller="carousel" class="relative group">
      <!-- Prev -->
      <button
        data-carousel-target="leftBtn"
        data-action="click->carousel#scrollLeft"
        class="flex absolute left-0 top-1/2 -translate-y-1/2 z-10
               w-10 h-10 bg-white rounded-full items-center justify-center border border-gray-light
               text-gray hover:text-ruby shadow-sm hover:shadow transition
               opacity-0 group-hover:opacity-100 -translate-x-4 group-hover:translate-x-0
               cursor-pointer"
        aria-label="Scroll left">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
        </svg>
      </button>

      <!-- Next -->
      <button
        data-carousel-target="rightBtn"
        data-action="click->carousel#scrollRight"
        class="flex absolute right-0 top-1/2 -translate-y-1/2 z-10
               w-10 h-10 bg-white rounded-full items-center justify-center border border-gray-light
               text-gray hover:text-ruby shadow-sm hover:shadow transition
               opacity-0 group-hover:opacity-100 translate-x-4 group-hover:translate-x-0
               cursor-pointer"
        aria-label="Scroll right">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
        </svg>
      </button>

      <!-- Track -->
      <div
        data-carousel-target="pane"
        class="flex overflow-x-auto gap-4 pb-2 snap-x snap-mandatory no-scrollbar rounded
              focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ruby focus-visible:ring-offset-2"
        tabindex="0" role="region" aria-label="<%= heading %>">
        <%= render partial: "shared/carousel/content_card", collection: collection, as: :item %>
        <% if path.present? %>
          <%= render "shared/carousel/view_all_card", path: path, heading: heading %>
        <% end %>
      </div>

      <!-- Right fade -->
      <div data-carousel-target="fade"
           class="hidden md:block absolute inset-y-0 right-0 w-16 pointer-events-none
                  bg-gradient-to-l from-white to-transparent"></div>
    </div>
  </div>
</section>
