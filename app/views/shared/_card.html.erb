<% link_target = case item
   when Post    then post_path(item.slug)
   when Article then article_path(item.slug)
   when Lesson  then lesson_path(item.slug)
   end
%>

<%= link_to link_target, class: "block flex-shrink-0 last:mr-8 w-72 sm:w-80 md:w-96" do %>
  <div class="h-full bg-white border border-gray-200 rounded-xl p-6 flex flex-col shadow-sm transition duration-300 ease-in-out hover:shadow-lg hover:ring-1 hover:ring-indigo-100 relative hover:z-10">
    <h3 class="text-xl font-semibold text-gray-900 mb-3 line-clamp-2"><%= item.title %></h3>
    <p class="text-base text-gray-700 mb-6 line-clamp-4"><%= strip_tags(marksmithed(item.body)) %></p>
    <div class="mt-auto">
      <span class="inline-block font-medium text-indigo-600 hover:text-indigo-800">
        Read more â†’
      </span>
    </div>
  </div>
<% end %>
