<% link_target =
  case item
  when Post    then post_path(item.slug)
  when Article then article_path(item.slug)
  when Lesson  then lesson_path(item.slug)
  end
%>

<%= link_to link_target,
            class: "block w-80 flex-shrink-0 first:ml-6 last:mr-8" do %>
  <div
    class="
      h-full w-full
      bg-gray-50 border border-gray-200 rounded-lg
      p-6 flex flex-col
      transition-shadow duration-200 ease-in-out
      hover:shadow-lg
      relative hover:z-10
    "
  >
    <h3 class="text-lg font-medium text-gray-800 mb-3 line-clamp-2">
      <%= item.title %>
    </h3>
    <p class="text-sm text-gray-600 mb-4 line-clamp-3">
      <%= strip_tags(marksmithed(item.body)) %>
    </p>
    <span class="mt-auto text-blue-600 hover:underline text-sm">
      Read more
    </span>
  </div>
<% end %>
