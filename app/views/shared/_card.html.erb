<% link_target = polymorphic_path(item) %>
<%= link_to link_target,
            class: "group snap-start block flex-shrink-0 last:mr-8
                    w-72 sm:w-80 md:w-96" do %>
  <div class="h-full bg-white border border-gray-200 rounded-xl p-6
              flex flex-col shadow transition-shadow duration-200
              hover:shadow-md hover:border-red-600 hover:ring-1 hover:ring-red-100">
    <h3 class="text-xl font-semibold text-gray-900 mb-3 line-clamp-2">
      <%= item.title %>
    </h3>
    <p class="text-base text-gray-700 mb-6 line-clamp-4">
      <%= strip_tags(marksmithed(item.body)) %>
    </p>
    <div class="mt-auto">
      <span class="inline-flex items-center gap-1 font-medium text-red-600
                   transition-colors duration-200 group-hover:text-red-800">
        Read more
        <svg xmlns="http://www.w3.org/2000/svg"
             class="w-4 h-4 transition-transform duration-200 group-hover:translate-x-1"
             fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7"/>
        </svg>
      </span>
    </div>
  </div>
<% end %>
