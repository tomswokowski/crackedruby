<div class="mb-6 flex items-center justify-between logo-container 
            group-[.collapsed-sidebar]:md:justify-center group-[.collapsed-sidebar]:md:relative">
  <%= link_to root_path, class: "flex items-center gap-2 cursor-pointer" do %>
    <img src="/logo.png" alt="CrackedRuby Logo" class="h-7 w-auto flex-shrink-0 group-[.collapsed-sidebar]:md:transition-opacity group-[.collapsed-sidebar]:md:duration-200 group-hover:group-[.collapsed-sidebar]:md:opacity-0" />
    <h2 class="text-xl font-bold logo-text group-[.collapsed-sidebar]:md:hidden" data-nav-drawer-target="menuContent">CrackedRuby</h2>
  <% end %>

  <button
    type="button"
    class="hidden md:flex ml-auto rounded cursor-pointer flex-shrink-0 sidebar-toggle
           group-[.collapsed-sidebar]:md:opacity-0 group-[.collapsed-sidebar]:md:absolute group-[.collapsed-sidebar]:md:left-1/2 group-[.collapsed-sidebar]:md:top-1/2 group-[.collapsed-sidebar]:md:-translate-x-1/2 group-[.collapsed-sidebar]:md:-translate-y-1/2 group-[.collapsed-sidebar]:md:transition-opacity group-[.collapsed-sidebar]:md:duration-200
           group-hover:group-[.collapsed-sidebar]:md:opacity-100"
    data-action="click->nav-drawer#toggleDesktop"
    aria-label="Toggle sidebar"
  >
    <svg
      class="h-5 w-5 text-gray hover:text-ruby transition-colors group-[.collapsed-sidebar]:md:w-7 group-[.collapsed-sidebar]:md:h-7"
      fill="currentColor"
      viewBox="0 0 64 64"
      xmlns="http://www.w3.org/2000/svg"
    >
      <path d="M50.01,56.074l-35.989,0c-3.309,0 -5.995,-2.686 -5.995,-5.995l0,-36.011
              c0,-3.308 2.686,-5.994 5.995,-5.994l35.989,0c3.309,0 5.995,2.686 5.995,5.994l0,36.011
              c0,3.309 -2.686,5.995 -5.995,5.995Zm-25.984,-4l0,-40l-9.012,0c-1.65,0.001 -2.989,1.34
              -2.989,2.989l0,34.022c0,1.649 1.339,2.989 2.989,2.989l9.012,0Zm24.991,-40l-20.991,0l0,40
              l20.991,0c1.65,0 2.989,-1.34 2.989,-2.989l0,-34.022c0,-1.649 -1.339,-2.988 -2.989,-2.989Z"/>
    </svg>
  </button>
</div>
