<div class="flex flex-col space-y-4 mb-6 menu-content" data-nav-drawer-target="menuContent">
  <%= render "shared/nav/menu_section", 
      title: "Learn Ruby", 
      items: Lesson.where(featured: true).limit(3), 
      view_all_path: lessons_path %>
  
  <%= render "shared/nav/menu_section", 
      title: "Software Dev", 
      items: Article.where(featured: true).limit(3), 
      view_all_path: articles_path,
      open: false %>
  
  <%= render "shared/nav/menu_section", 
      title: "Blog", 
      items: Post.where(featured: true).limit(3), 
      view_all_path: posts_path,
      open: false %>
  
  <div class="border-t border-gray-light pt-4 mt-2 space-y-4">
    <%= link_to "About", about_path, class: "block font-semibold text-black hover:text-ruby truncate cursor-pointer" %>
    <%= link_to "Apps", apps_path, class: "block font-semibold text-black hover:text-ruby truncate cursor-pointer" %>
  </div>
</div>
