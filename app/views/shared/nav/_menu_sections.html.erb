<div class="flex flex-col space-y-4 mb-6 menu-content" data-nav-drawer-target="menuContent">
  <% active = current_page?(app_path) %>
  <%= link_to app_path,
      {
        class: [
          "relative flex items-center rounded-lg py-2 pl-2 pr-3",
          "transition-colors duration-150",
          "hover:bg-ruby/5 active:bg-ruby/10",
          "focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ruby/30"
        ].compact.join(" "),
        aria: (active ? { current: "page" } : {})
      } do %>

    <span class="absolute left-0 top-1/2 -translate-y-1/2 h-5 w-1 bg-ruby rounded-full"></span>

    <span class="font-semibold <%= active ? 'text-ruby' : 'text-ruby hover:text-ruby/90' %> select-none">
      Launch App
    </span>
  <% end %>

  <div class="border-t border-gray-light/80 pt-4"></div>

  <%= render "shared/nav/menu_section",
      title: "Learn Ruby",
      items: Post.learn_ruby.where(featured: true).limit(3),
      view_all_path: "/learn-ruby",
      open: false %>

  <%= render "shared/nav/menu_section",
      title: "Software Dev",
      items: Post.software_dev.where(featured: true).limit(3),
      view_all_path: "/software-development",
      open: false %>

  <%= render "shared/nav/menu_section",
      title: "Blog",
      items: Post.blogs.where(featured: true).limit(3),
      view_all_path: "/blog",
      open: false %>

  <div class="border-t border-gray-light pt-4 mt-2 space-y-4">
    <%= link_to "About", about_path, class: "block font-semibold text-black hover:text-ruby truncate cursor-pointer" %>
  </div>
</div>
