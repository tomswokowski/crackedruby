<header 
  data-controller="nav-mobile-header"
  class="fixed top-0 left-0 right-0 bg-white text-black flex items-center justify-start 
         p-4 z-40 shadow-md transform transition-transform duration-500 md:hidden"
>
  <button class="mr-4 cursor-pointer" data-action="click->nav-drawer#toggle">
    <svg xmlns="http://www.w3.org/2000/svg" 
         class="h-6 w-6 text-black" 
         fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" 
            d="M3.75 6.75h16.5M3.75 12h16.5M3.75 17.25h16.5" />
    </svg>
  </button>
  <%= link_to root_path, class: "flex items-center gap-2 cursor-pointer" do %>
    <img src="/logo.png" alt="CrackedRuby logo" class="h-6 w-auto" />
    <h1 class="text-lg font-bold">CrackedRuby</h1>
  <% end %>
</header>
