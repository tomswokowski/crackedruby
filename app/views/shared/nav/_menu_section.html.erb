<details <%= 'open' if local_assigns[:open] != false %> class="menu-section">
  <summary class="flex justify-between items-center cursor-pointer font-semibold text-gray-800 truncate group">
    <%= title %>
    <span class="flex-shrink-0">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-gray-400 arrow-icon arrow-right" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
        <path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7" />
      </svg>
      <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-gray-400 arrow-icon arrow-down" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
        <path stroke-linecap="round" stroke-linejoin="round" d="M19 9l-7 7-7-7" />
      </svg>
    </span>
  </summary>
  <ul class="ml-4 mt-1 space-y-1">
    <% items.each do |item| %>
      <li>
        <%= link_to item.title, send("#{item.class.name.downcase}_path", item.slug), class: "block text-gray-600 hover:text-red-600 text-sm truncate cursor-pointer" %>
      </li>
    <% end %>
    <li>
      <%= link_to "View All", view_all_path, class: "block text-sm text-gray-600 hover:text-red-600 underline truncate cursor-pointer" %>
    </li>
  </ul>
</details>
