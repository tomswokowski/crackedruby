<div data-controller="drawer sign-in-modal" class="flex flex-col w-full">
  <header data-controller="header" class="fixed top-0 left-0 right-0 bg-white text-gray-900 flex items-center justify-start p-4 z-40 shadow-md transform transition-transform duration-300 md:hidden">
    <button class="mr-4 cursor-pointer" data-action="click->drawer#toggle">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-gray-900" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5M3.75 17.25h16.5" />
      </svg>
    </button>
    <%= link_to root_path, class: "flex items-center gap-2 cursor-pointer" do %>
      <img src="/logo.png" alt="CrackedRuby logo" class="h-6 w-auto" />
      <h1 class="text-lg font-bold">CrackedRuby</h1>
    <% end %>
  </header>

  <div data-drawer-target="backdrop" data-action="click->drawer#close" class="fixed inset-0 bg-black/20 z-40 hidden md:hidden"></div>

  <nav id="nav" class="fixed inset-y-0 left-0 w-64 bg-white text-gray-900 transform -translate-x-full md:translate-x-0 transition-transform duration-200 ease-in-out z-50 flex flex-col shadow-md overflow-y-auto" data-drawer-target="panel">
    <button class="absolute top-4 right-[-2.5rem] bg-gray-900 text-white rounded-full w-8 h-8 flex items-center justify-center md:hidden cursor-pointer" data-drawer-target="closeButton" data-action="click->drawer#close">âœ•</button>

    <div class="flex-1 overflow-y-auto p-4 flex flex-col">
      <div class="mb-6">
        <%= link_to root_path, class: "flex items-center gap-2 cursor-pointer" do %>
          <img src="/logo.png" alt="CrackedRuby logo" class="h-7 w-auto" />
          <h2 class="text-xl font-bold">CrackedRuby</h2>
        <% end %>
      </div>

      <div class="flex flex-col space-y-6 mb-6">
        <details open class="group">
          <summary class="flex justify-between items-center cursor-pointer font-semibold text-gray-800 hover:text-red-600 truncate">
            Learn Ruby
            <span class="flex-shrink-0">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-gray-400 group-open:hidden" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7" />
              </svg>
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-gray-400 hidden group-open:inline" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M19 9l-7 7-7-7" />
              </svg>
            </span>
          </summary>
          <ul class="ml-4 mt-1 space-y-1">
            <% Lesson.where(featured: true).limit(3).each do |lesson| %>
              <li>
                <%= link_to lesson.title, lesson_path(lesson.slug), class: "block text-gray-600 hover:text-red-600 text-sm truncate cursor-pointer" %>
              </li>
            <% end %>
            <li>
              <%= link_to "View All", lessons_path, class: "block text-sm text-gray-600 hover:text-red-600 underline truncate cursor-pointer" %>
            </li>
          </ul>
        </details>

        <details open class="group">
          <summary class="flex justify-between items-center cursor-pointer font-semibold text-gray-800 hover:text-red-600 truncate">
            Software Development
            <span class="flex-shrink-0">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-gray-400 group-open:hidden" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7" />
              </svg>
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-gray-400 hidden group-open:inline" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M19 9l-7 7-7-7" />
              </svg>
            </span>
          </summary>
          <ul class="ml-4 mt-1 space-y-1">
            <% Article.where(featured: true).limit(3).each do |article| %>
              <li>
                <%= link_to article.title, article_path(article.slug), class: "block text-gray-600 hover:text-red-600 text-sm truncate cursor-pointer" %>
              </li>
            <% end %>
            <li>
              <%= link_to "View All", articles_path, class: "block text-sm text-gray-600 hover:text-red-600 underline truncate cursor-pointer" %>
            </li>
          </ul>
        </details>

        <details open class="group">
          <summary class="flex justify-between items-center cursor-pointer font-semibold text-gray-800 hover:text-red-600 truncate">
            Blog
            <span class="flex-shrink-0">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-gray-400 group-open:hidden" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7" />
              </svg>
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-gray-400 hidden group-open:inline" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M19 9l-7 7-7-7" />
              </svg>
            </span>
          </summary>
          <ul class="ml-4 mt-1 space-y-1">
            <% Post.where(featured: true).limit(3).each do |post| %>
              <li>
                <%= link_to post.title, post_path(post.slug), class: "block text-gray-600 hover:text-red-600 text-sm truncate cursor-pointer" %>
              </li>
            <% end %>
            <li>
              <%= link_to "View All", posts_path, class: "block text-sm text-gray-600 hover:text-red-600 underline truncate cursor-pointer" %>
            </li>
          </ul>
        </details>

        <%= link_to "About", about_path, class: "block font-semibold text-gray-800 hover:text-red-600 truncate cursor-pointer" %>
      </div>

      <div class="mt-auto mb-6">
        <% if user_signed_in? %>
          <details class="group">
            <summary class="flex justify-between items-center w-full cursor-pointer px-2 py-2 rounded bg-gray-100 hover:bg-gray-200">
              <span class="text-xs text-gray-800 truncate"><%= current_user.email %></span>
              <span class="flex-shrink-0">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-gray-400 group-open:hidden" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7" />
                </svg>
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-gray-400 hidden group-open:inline" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M19 9l-7 7-7-7" />
                </svg>
              </span>
            </summary>
            <div class="mt-2 ml-2 flex flex-col space-y-1 text-sm">
              <% if current_user.admin? %>
                <%= link_to "Admin Dashboard", admin_path, class: "block px-2 py-1 hover:bg-gray-100 rounded text-sm text-red-700 cursor-pointer" %>
              <% end %>
              <%= link_to "Settings", settings_path, class: "block px-2 py-1 hover:bg-gray-100 rounded text-sm cursor-pointer" %>
              <%= button_to "Sign Out", destroy_user_session_path, method: :delete, data: { turbo: false }, class: "w-full text-left px-2 py-1 hover:bg-red-50 hover:text-red-600 rounded text-sm cursor-pointer" %>
            </div>
          </details>
        <% else %>
          <button data-action="click->sign-in-modal#open" class="w-full text-center px-4 py-2 bg-gray-200 text-gray-800 rounded hover:bg-gray-300 cursor-pointer">
            Sign In
          </button>
        <% end %>
      </div>
    </div>
  </nav>

  <%= render "shared/sign_in_modal" %>
</div>
