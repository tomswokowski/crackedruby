<div data-controller="drawer" class="flex">
  <button class="md:hidden p-4 fixed top-4 left-4 z-50" data-action="click->drawer#toggle">
    ☰
  </button>

  <div 
    data-drawer-target="backdrop"
    data-action="click->drawer#close"
    class="fixed inset-0 bg-black/20 z-40 hidden md:hidden"></div>

  <nav
    id="nav"
    class="fixed inset-y-0 left-0 w-64 bg-gray-800 text-white transform -translate-x-full md:translate-x-0 transition-transform duration-200 ease-in-out z-50 flex flex-col"
    data-drawer-target="panel">

    <button
      class="absolute top-4 right-[-2.5rem] bg-gray-700 text-white rounded-full w-8 h-8 flex items-center justify-center md:hidden z-50 hidden"
      data-drawer-target="closeButton"
      data-action="click->drawer#close">
      ✕
    </button>

    <div class="flex-1 p-4">
      <h2 class="text-xl font-bold mb-4">CrackedRuby</h2>

      <% if user_signed_in? %>
        <p class="mb-4">Signed in as <%= current_user.email %></p>
        <%= button_to "Sign out", destroy_user_session_path, method: :delete, data: { turbo: false }, class: "w-full mb-4 bg-red-600 text-white py-2 px-4 rounded" %>
      <% else %>
        <%= button_to "Sign in with Google", user_google_oauth2_omniauth_authorize_path, method: :post, data: { turbo: false }, class: "w-full mb-2 bg-blue-600 text-white py-2 px-4 rounded" %>
        <%= button_to "Sign in with GitHub", user_github_omniauth_authorize_path, method: :post, data: { turbo: false }, class: "w-full mb-2 bg-gray-700 text-white py-2 px-4 rounded" %>
      <% end %>
    </div>
  </nav>
</div>
