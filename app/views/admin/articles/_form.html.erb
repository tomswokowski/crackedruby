<%= form_with model: [:admin, @article], local: true do |f| %>
  <% if @article.errors.any? %>
    <div class="bg-red-100 border border-red-400 text-red-700 p-4 mb-4 rounded">
      <h2><%= pluralize(@article.errors.count, "error") %> prohibited this article from saving:</h2>
      <ul class="list-disc ml-5 mt-2">
        <% @article.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-4">
    <%= f.label :title, class: "block font-medium" %>
    <%= f.text_field :title, class: "w-full border rounded p-2" %>
  </div>

  <div class="mb-4">
    <%= f.label :slug, class: "block font-medium" %>
    <%= f.text_field :slug, class: "w-full border rounded p-2" %>
  </div>

  <div class="mb-4">
    <%= f.label :body, class: "block font-medium" %>
    <%= f.text_area :body, rows: 10, class: "w-full border rounded p-2" %>
  </div>

  <div class="flex items-center mb-4 space-x-6">
    <label class="inline-flex items-center">
      <%= f.check_box :published %>
      <span class="ml-2">Published</span>
    </label>
    <label class="inline-flex items-center">
      <%= f.check_box :featured %>
      <span class="ml-2">Featured</span>
    </label>
  </div>

  <div>
    <%= f.submit class: "px-4 py-2 bg-blue-600 text-white rounded" %>
  </div>
<% end %>
