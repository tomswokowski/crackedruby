<h1 class="text-2xl font-bold mb-4"><%= @lesson.title %></h1>
<p class="text-sm text-gray-500 mb-2">Slug: <%= @lesson.slug %></p>
<p class="text-sm text-gray-500 mb-6">
  Published: <%= @lesson.published? %> |
  Featured:  <%= @lesson.featured? %>
</p>

<div class="prose">
  <%= simple_format(@lesson.body) %>
</div>

<div class="mt-6 space-x-2">
  <%= link_to "Edit", edit_admin_lesson_path(@lesson), class: "px-4 py-2 bg-yellow-300 rounded" %>
  <%= link_to "Back", admin_lessons_path, class: "px-4 py-2 bg-gray-200 rounded" %>
</div>
