<h1 class="text-3xl font-bold mb-6">Manage Lessons</h1>
<%= link_to "New Lesson", new_admin_lesson_path, class: "px-4 py-2 bg-green-500 text-white rounded" %>

<ul class="mt-4 space-y-2">
  <% @lessons.each do |lesson| %>
    <li class="p-4 border rounded flex justify-between items-center">
      <div><%= lesson.title %></div>
      <div class="space-x-2">
        <%= link_to "Show",   admin_lesson_path(lesson),       class: "px-2 py-1 bg-blue-300 rounded" %>
        <%= link_to "Edit",   edit_admin_lesson_path(lesson),  class: "px-2 py-1 bg-yellow-300 rounded" %>
        <%= link_to "Delete", admin_lesson_path(lesson),
                    method: :delete,
                    data: { confirm: "Are you sure?" },
                    class: "px-2 py-1 bg-red-400 text-white rounded" %>
      </div>
    </li>
  <% end %>
</ul>
